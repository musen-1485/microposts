<% if current_user.favorite_microposts?(micropost) %>
<%= form_with(model: current_user.favorites.find_by(micropost_id: [micropost.id](http://micropost.id/)), method: :delete) do |f| %>
<%= hidden_field_tag :micropost_id, [micropost.id](http://micropost.id/) %>
<%= f.submit 'Unfavorite', class: 'btn btn-danger btn-sm' %>
<% end %>
<% else %>
<%= form_with(model: current_user.relationships.build) do |f| %>
<%= hidden_field_tag :micropost_id, [micropost.id](http://micropost.id/) %>
<%= f.submit 'Favorite', class: 'btn btn-primary btn-sm' %>
<% end %>
<% end %>